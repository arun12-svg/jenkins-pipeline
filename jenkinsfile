pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "arun054/myapp"
        DOCKER_TAG = "v1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/arun12-svg/jenkins-pipeline.git'
            }
        }

        stage('Run Python Pipeline Script') {
            steps {
                sh 'python3 pipeline.py'
            }
        }
    }

    post {
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
