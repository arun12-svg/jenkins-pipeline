pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "arun054/myapp"
        DOCKER_TAG = "v1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/arun12-svg/jenkins-pipeline.git'
            }
        }

        stage('Install Python dependencies') {
            steps {
                sh "python3 --version"
                sh "pip3 install --upgrade pip"
            }
        }

        stage('Run Python Pipeline Script') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'),
                    file(credentialsId: 'kubeconfig',
                        variable: 'KUBECONFIG')
                ]) {
                    sh """
                        export DOCKER_USER=$DOCKER_USER
                        export DOCKER_PASS=$DOCKER_PASS
                        export KUBECONFIG=$KUBECONFIG
                        python3 pipeline.py
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
